</action>

<action name="eliminarUsuarioRecorrido" method="eliminarUsuarioRecorrido" class="CRUDRecorridoAction">
	<result name="success"  type="redirect"> listadoMisRecorridos</result>
	<result name="input" type="redirect"> login </result>
</action>

</package>
</struts>